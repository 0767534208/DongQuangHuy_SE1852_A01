    <Application x:Class="DongQuangHuyWPF.Views.App"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:local="clr-namespace:DongQuangHuyWPF.Views"
                 StartupUri="LoginWindow.xaml">
        <Application.Resources>
            <ResourceDictionary>
                <!-- Your custom styles -->
                <Style x:Key="LoginTextBox" TargetType="TextBox">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>

                <Style x:Key="LoginButton" TargetType="Button">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="Width" Value="120"/>
                </Style>

                <!-- Dashboard Styles -->
                <Style x:Key="HeaderButton" TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>

                <Style x:Key="ActionButton" TargetType="Button">
                    <Setter Property="Width" Value="80"/>
                    <Setter Property="Margin" Value="10,0" />
                    <Setter Property="Padding" Value="10,5"/>
                </Style>

                <Style x:Key="RowButton" TargetType="Button">
                    <Setter Property="Width" Value="60"/>
                    <Setter Property="Margin" Value="5,0"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </ResourceDictionary>
        </Application.Resources>
    </Application>